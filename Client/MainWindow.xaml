<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="FTP Client Application" Height="500" Width="850" MinHeight="500" MinWidth="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F5F5F5" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Server IP:" Width="60" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="serverIpTextBox" Text="127.0.0.1" Width="80" Margin="5" ToolTip="Server IP Address"/>

                <TextBlock Text="Port:" Width="30" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="serverPortTextBox" Text="5000" Width="50" Margin="5" ToolTip="Server Port"/>

                <TextBlock Text="Username:" Width="60" Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="usernameTextBox" Width="120" Margin="5" ToolTip="Username"/>

                <TextBlock Text="Password:" Width="60" Margin="5" VerticalAlignment="Center"/>
                <PasswordBox x:Name="passwordBox" Width="120" Margin="5" ToolTip="Password"/>

                <Button Content="Подключение" Width="120" Margin="10,5,5,5" Click="BtnConnect_Click" Background="#007ACC" Foreground="White"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Директория:" Grid.Row="0" FontSize="14" FontWeight="Bold" Margin="0,5"/>

            <ListBox x:Name="serverItemsListBox" Grid.Row="1" Margin="0,5,0,10" 
                    MouseDoubleClick="lstDirectories_MouseDoubleClick" 
                    BorderThickness="1" BorderBrush="#CCCCCC"/>

            <Button x:Name="uploadFileButton" Content="Загрузить на сервер" Width="150" 
                    Grid.Row="2" HorizontalAlignment="Right" Click="Download" 
                    Height="35" Background="#28A745" Foreground="White"/>
        </Grid>
    </Grid>
</Window>